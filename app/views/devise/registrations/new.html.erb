<div class="page-header">
  <h1>Sign Up</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= glyph(:star) %>
      <%= f.email_field :email, :class => 'form-control', :spellcheck => false %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= glyph(:star) %>
      <%= f.password_field :password, :class => 'form-control', :spellcheck => false %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", :class => 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= glyph(:star) %>
      <%= f.password_field :password_confirmation, :class => 'form-control', :spellcheck => false %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit "Sign Up", :class => "btn btn-primary" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
