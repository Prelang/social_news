  <div class="form-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'password_field', spellcheck: "false" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'password_field', spellcheck: "false" %>
    </div>
  </div>

  <div class="form-group">
  </div>
  -->
<% end %>

